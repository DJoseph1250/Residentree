
<style type="text/css">
  .starter-template{
    margin-top: 250px;
    background-color: rgba(255,255,255,0.3);
    font-family: Copperplate, 'Copperplate Gothic Light', fantasy;
  }
  .alert{
    color: "red";
  }

  h1 {
    font-size: 40px;
    font-style: normal;
    font-variant: normal;
    font-weight: 500;
  }

  video {
    z-index: -1; 
    position: fixed;
    height: 100%;
    width: 100%;
    margin-top: -70px;
  }

  footer {
    color: pink;
    font-size: 12px;
    float: right;
    margin-top: 325px;
    margin-right: 20px;
    position: relative;
  }

  #heart {
    height: 15px;
    width: auto;
  }
</style>

<video class="background-video hero-bg-video is-playing" loop="loop" autoplay="autoplay" muted="muted" poster="http://www.coverr.co/s3/mp4/NYC-Traffic.jpg" id="bgvid">
  <source src="http://www.coverr.co/s3/mp4/NYC-Traffic.mp4" type="video/mp4">
  <source src="http://www.coverr.co/s3/mp4/NYC-Traffic.webm" type="video/webm">
  <source src="http://www.coverr.co/s3/mp4/NYC-Traffic.ogv" type="video/ogg">
</video>
<center>
  
  <div class="starter-template">
    
    <h1>Residentree</h1>
    
    <p class="lead">
      Find, review, and talk about your building!
    </p>
    
     <% if flash.alert %>
    <div class="alert"><%= flash.alert%></div>
  <% end %>
    <p>
      <%= form_tag("/buildings") do %>
      <%= label_tag('building[address]', "Address") %>
      <%= text_field_tag('building[address]') %>

      <%= label_tag('building[borough]', "Borough") %>
   <select name = "building[borough]" id = "borough_address">
      <option disabled selected> -- Select a Borough -- </option>
      <option value = "Brooklyn">Brooklyn</option>
      <option value = "Bronx">Bronx</option>
      <option value = "Manhattan">Manhattan</option>
      <option value = "Queens">Queens</option>
      <option value = "Staten Island">Staten Island</option>
  </select>

      <%= submit_tag "Submit" %>
      <% end %>
    </p>

  </div>
</center>
<footer>Made with <img src="https://www.djangoproject.com/s/img/small-fundraising-heart.png" id = 'heart'> by NYers, for NYers</footer>

